.pagetitle {
    font-size: 23px !important;
	font-family: $font-family-title !important;
    text-align: center;
    margin-top: 2rem;
	animation:fadein .2s ease-in;
	-webkit-animation:fadein .2s ease-in;
	-moz-animation:fadein .2s ease-in;
	-o-animation:fadein .2s ease-in;
	-ms-animation:fadein .2s ease-in;
}

.page-main {
    position: relative;
    padding: .6rem 3.6rem 3rem 4rem;
    box-shadow: 0px 0px 1rem rgba($color-block, 0.2);
    background-color: rgba($color-block, $post-block-opacity);
    text-align: justify;
    line-height: 2.2rem;
    transition-duration: .5s;
	
	@media screen and (max-width: 1024px) {
		padding: .6rem 7% 3rem 7.4%;
	}
	
	@media screen and (max-width: 600px) {
		padding: .6rem 3% 3rem;
	}

	&:hover {
	    background-color: rgba($color-block, $post-hover-opacity);
        box-shadow: 0px 0px 2.5rem rgba($color-block, 0.6);
	}
	
	img {
		transition: transform 0.5s ease;
			
		&:hover {
		    transform: scale(1.02)
			-webkit-transform: scale(1.02)
			-ms-transform: scale(1.02)
			-o-transform: scale(1.02)
		}
	}
	
	li {
		font-family: $font-family-post;
		font-size: 17px;
		line-height: 2.2rem;
		font-weight: 400;
		color: $color-font;
		animation:fadein .2s ease-in;
		-webkit-animation:fadein .2s ease-in;
		-moz-animation:fadein .2s ease-in;
		-o-animation:fadein .2s ease-in;
		-ms-animation:fadein .2s ease-in;
	}
	
	ul, ol {
		margin-left: .5rem;
		padding-left: .7rem; 
		padding-right: .3rem; 
		animation:fadein .4s ease-in;
		-webkit-animation:fadein .4s ease-in;
		-moz-animation:fadein .4s ease-in;
		-o-animation:fadein .4s ease-in;
		-ms-animation:fadein .4s ease-in;
	}
	
	a {
		color: $color-link;
		text-decoration: none;
		transition-duration: .3s;
	}
	
	a:hover {
		color: $color-hover;
	}
	
	a:active{ 
		color: $color-active
	}
	
	h1, h2, h3, h4, h5, h6 {
		-webkit-animation:fadein .2s ease-in;
		-moz-animation:fadein .2s ease-in;
		-o-animation:fadein .2s ease-in;
		-ms-animation:fadein .2s ease-in;
	}
	
	h1 {
		font-size: 40px;
		line-height: 2.8rem;
	}
}
.tags {
	padding: 1.2rem 4rem 20rem 4rem;
	box-shadow: 0px 0px 1rem rgba($color-block,0.2);
	background-color: rgba($color-block,$post-block-opacity);
	transition-duration: .3s;
	animation:fadein .2s ease-in;
	-webkit-animation:fadein .2s ease-in;
	-moz-animation:fadein .2s ease-in;
	-o-animation:fadein .2s ease-in;
	-ms-animation:fadein .2s ease-in;
	
	&:hover {
	    background-color: rgba($color-block, $post-hover-opacity);
        box-shadow: 0px 0px 2.5rem rgba($color-block, 0.6);
	}
	
	@media screen and (max-width: 1024px) {
		padding: 1.2rem 7% 20rem 7.4%;
	}
	
	@media screen and (max-width: 600px) {
		padding: 1.2rem 4.6% 20rem 5%;
	}
	
	li {
		font-family: $font-family-post;
		font-size: 17px;
		line-height: 2.2rem;
		font-weight: 400;
	}
	
	a {
	    color: $color-font;
	    text-decoration: none;
	    transition-duration: .2s;
	}
	
	a:hover {
	    color: $color-hover;
	}
	
	a:active{ 
	    color: $color-active
	}
}

.tag-list-count {
	margin: 0 5px;
	color: rgba($color-font, 0.4)
	font-size: 15px;
	
}

.tag-list-item {
	display: inline-block;
	margin: .2rem .6rem;
	word-break: break-all;
	word-wrap: break-word;
}

.tag-list-link {
	color: $color-font;
	
	&:hover {
		color: $color-hover;
	}
}
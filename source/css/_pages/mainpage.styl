.header {
    text-align: center;
	height: 100vh;
	animation:fadein .2s linear;
	-webkit-animation:fadein .2s linear;
	-moz-animation:fadein .2s linear;
	-o-animation:fadein .2s linear;
	-ms-animation:fadein .2s linear;
	
	a {
	    color: $color-font;
	    text-decoration: none;
	    transition-duration: .2s;
	}
	
	a:hover {
	    color: $color-hover;
	}
	
	a:active{ 
	    color: $color-active
	}
}

.header-block {
	position: relative;
	top: 30%;
	margin: auto;
	padding: 0;
	background-color: rgba($color-block, $header-menu-opacity);
	height: 15.7rem;
	width: 60%;
	border-radius: 10px;
	box-shadow: 0px 0px .3rem rgba($color-block, 0.2);
	
	@media screen and (min-width: 1367px) {
		width: 60%;
	}
	
	@media screen and (max-width: 1367px) {
		height: 15.35rem;
	}
	
	@media screen and (max-width: 1024px) {
		width: 70%;
		height: 14.8rem;
	}
	
	@media screen and (max-width: 600px) {
		width: 100%;
		height: 14.8rem;
	}
}

.author{
	position: relative;
	bottom: 6.6rem;
	margin: auto;
}

.author-avatar img {

	margin: .6rem auto .2rem;
	border: 4px solid $white;
	border-radius: 100%;
	height: 170px;
	width: 170px;
	box-shadow: 0px 0px .6rem rgba($color-block, 0.4);
	-webkit-transition: transform 0.8s ease;
	-o-transition: transform 0.5s ease;
	transition: transform 0.5s ease;
	
	@media screen and (max-width: 1367px) {
		height: 165px;
		width: 165px;

	}
	
	@media screen and (max-width: 1024px) {
		height: 145px;
		width: 145px;
		margin: 1.3rem auto .2rem;

	}

	&:hover {
		transform: scale(1.03)
		-webkit-transform: scale(1.03)
		-ms-transform: scale(1.03)
		-o-transform: scale(1.03)
	}
}

.author-name{
	margin: auto;
	text-align: center;
	font-size: 26px;
	font-weight: 600;
	font-family: $font-family-title;
	width: 90%;
	transition-duration: .3s;
	color: $color-font;
			
	&:hover {
		color: $hover-color;
	}
}

.site-subtitle {
	position: relative;
	margin: auto;
	bottom: 6.3rem;
	width: 50%;
	max-height: 1.9rem;
	overflow: auto;
	font-size: 19px;
	color: $color-font;
	font-weight: 600;
	font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif, STKaiti, HuaWenKaiTi;
}

.site-descr {
	position: relative;
	margin: auto;
	bottom: 6.3rem;
	max-width: 90%;
	overflow: hidden;
	color: rgba($color-font, 0.6);
	font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif, SourceHanSerifCN-light;
}

.social {
	position: relative;
	width: 90%;
	margin: .6rem auto;
	bottom: 6.3rem;

	.social-link {
		text-decoration: none;
		color: $color-font;
		transition-duration: .2s;
		margin: 0 .2rem;
		font-weight: 500;

		&:hover {
			color: $color-hover;
		}
	}
}

.link-relay {
	position: relative;
	bottom: 6.5rem;
	opacity: 0.8;
	
	&:hover {
		opacity: 1;
	}
}

.mainpage-Ukitopia {
	border: 1px dashed rgba($color-font, 0.5);
}

.mainpage-posts, .mainpage-Ukitopia {
	padding: 1.6rem 3.2rem 2rem;
	margin: 0 0 .5rem 0;
	box-shadow: 0px 0px 1rem rgba($color-block, 0.2);
    background-color: rgba($color-block, $post-block-opacity);
    font-size: 17px;
    line-height: 2.2rem;
	transition-duration: .3s;
	word-break: break-all;
	word-wrap:break-word;
	animation:fadein .2s ease-in;
	-webkit-animation:fadein .2s ease-in;
	-moz-animation:fadein .2s ease-in;
	-o-animation:fadein .2s ease-in;
	-ms-animation:fadein .2s ease-in;
	
	@media screen and (max-width: 1367px) {
		padding: 1.6rem 8% 2rem;
	}

	
	@media screen and (max-width: 1025px) {
		padding: 1.6rem 4% 2rem;
	}
	
	li {
		font-family: $font-family-post;
		font-size: 17px;
		color: $color-font;
		line-height: 2.2rem;
		font-weight: 400;
	}
	
	a {
	    color: $color-link;
	    text-decoration: none;
	    transition-duration: .2s;
	}
	
	a:hover {
	    color: $color-hover;
	}
	
	a:active{ 
	    color: $color-active
	}

	&:hover {
	    background-color: rgba($color-block, $post-hover-opacity);
		box-shadow: 0px 0px 2.5rem rgba($color-block,0.6);
	}
	
	img {
		position: relative;
		display: inline-block;
		left: 1%;
		width: 98%;
	    border: .05rem solid $color-font;
	    transition: transform 0.5s ease;
	
	    &:hover {
	        transform: scale(1.02)
			-webkit-transform: scale(1.02)
			-ms-transform: scale(1.02)
			-o-transform: scale(1.02)
	    }
	}
}

.mainpage-post-title {
	text-align: center;
	font-size: 30px;
	font-family: $font-family-title;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

	.post-title-link {
		text-decoration: none;
		color: $color-font;
		display: inline-block;
		vertical-align: middle;
		-webkit-transform: perspective(1px) translateZ(0);
		transform: perspective(1px) translateZ(0);
		box-shadow: 0 0 1px rgba(0, 0, 0, 0);
		position: relative;
		overflow: hidden;

		&:before {
		  content: "";
		  position: absolute;
		  z-index: -1;
		  left: 51%;
		  right: 51%;
		  bottom: 0;
		  background: $color-hover;
		  height: 2.1px;
		  -webkit-transition-property: left, right;
		  transition-property: left, right;
		  -webkit-transition-duration: .2s;
		  transition-duration: .2s;
		  -webkit-transition-timing-function: ease-out;
		  transition-timing-function: ease-out;
		}
		
		&:hover:before, &:focus:before, &:active:before {
		  left: 0;
		  right: 0;
		}
	}
}

.mpbreakup {
	position: relative;
	text-align: center;
	color: $color-font;
}

.mainpage-post-meta {
	position: relative;
	width: 70%;
	border: 1px dashed $color-font;
	border-radius: .5rem;
	margin: auto;
	padding: .3rem;
	text-align: center;
	font-size: 16px;
	font-family: $font-family-post;
	font-weight: 300;
	line-height: 1.7rem;
	top: .7rem;
	color: $color-font;
}


.mainpage-post-content {
	padding-top: .8rem;
	text-align: justify;
}

.mainpage-post-category {
	position: relative;
	bottom: 1rem;
	right: 2.2rem;
	color: $color-font;
	
	@media screen and (max-width: 1367px) {
		right: 7%;
	}
	
	@media screen and (max-width: 1024px) {
		right: 3%;
	}
	
	@media screen and (max-width: 600px) {
		right: 1%;
	}
	
	.mpcategory-name {
		font-size: 17px;
		font-weight: 300;
		font-family: $font-family-post;
	}
}

.mptag-name {
	padding: .1rem .5rem 0 .1rem;
	border: 1px dashed $color-font;
	border-radius: .5rem;
	font-size: 14px;
	font-weight: 100;
	font-family: $font-family-post;
	color: $color-font;
}
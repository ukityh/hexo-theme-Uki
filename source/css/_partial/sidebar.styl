.sidebar-navbar {
	padding: .5rem 0 .8rem;
	box-shadow: 0px 0px 1rem rgba($color-block, 0.2);
	background-color: rgba($color-block,$post-block-opacity);
	transition-duration: .3s;
	text-align: center;
	border: 1px dashed rgba($color-font, 0.5);
	border-radius: .5rem;
	
	::-webkit-scrollbar {
		height: .4rem;
		width: .3rem;
	}
	
	ul, ol {
		position: relative;
		padding: 0;
	}

	&:hover {
	    background-color: rgba($color-block, $post-hover-opacity);
		box-shadow: 0px 0px 2rem rgba($color-block, 0.6);
	}
}

.navbar-title {
	font-size: 19px;
	font-family: $font-family-title;
	color: $color-font;
	font-weight: 600;
	position: relative;
	padding: .6rem 0;
	margin-top: .5rem
	border: 1px dashed rgba($color-font, 0.5);
	background-color: rgba($color-block, 0.1);
	border-radius: 1rem;
}

.navbar-menu {
	position: relative;
	max-height: 56vh;
	overflow: auto;
	
	li {
		line-height: 2.8rem;
		padding: 0;
		margin: 0;
	}
}

.navbar-menu-item {

	ul {
		display: none;
		visibility: hidden;
	}
	
	li {
		animation:fadein .4s ease-in;
		-webkit-animation:fadein .4s ease-in-out;
		-moz-animation:fadein .4s ease-in-out;
		-o-animation:fadein .4s ease-in-out;
		-ms-animation:fadein .4s ease-in-out;
	}
	
}
	
.nav-sub-item ul {
		display: none;
		visibility: hidden;
}

.nav-sum {
	padding: .5rem 0;
	margin: auto;
	width: 100%;
	display: flex;
	justify-content: center;
	font-family: Ariel;
	
	a {
	    color: $color-font;
	    text-decoration: none;
	    transition-duration: .2s;
	}
	
	a:hover {
	    color: $color-hover;
	}
	
	a:active{ 
	    color: $color-active
	}
	
	.nav-counthref1 {
		padding: 6px 14px;
		margin: 0 1px;
		color: $color-font;
		font-family: Microsoft YaHei, STHeiti, SimHei;
		
		&:hover {
			color: $color-hover;
		}
	}
	.nav-counthref2 {
		padding: 6px 14px;
		margin: 0 1px;
		color: $color-font;
		font-family: Microsoft YaHei, STHeiti, SimHei;
		
		&:hover {
			color: $color-hover;
		}
	}
}

/* button */
.sidebar-button, .sidebar-subbutton, .sidebar-thirdbutton, .sidebar-fourthbutton {
	height: 2.5rem;
	-webkit-appearance: none;
	width: 95%;
	background: none;
	border: 0px;
	font-size: 16px;
	font-family: $font-family-title;
	color: $color-font;
	transition: all .3s;
	
	&:hover { 
		background: rgba($color-hover, 0.7); 
		color: $color-block;
	}
}

.sidebar-button {
	font-size: 18px;
	font-weight: 600;
}

.sidebar-subbutton {
	border: 1px dashed rgba($color-font, 0.7);
	border-radius: 1rem;
}